# Borgmatic Web UI Environment Configuration

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./borgmatic.db
DB_PASSWORD=borgmatic123

# Borgmatic Configuration
BORGMATIC_CONFIG_PATH=/app/config
BORGMATIC_BACKUP_PATH=/backups

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/borgmatic-ui.log

# CORS Settings
CORS_ORIGINS=http://localhost:7879,http://localhost:8000

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=300

# Backup Settings
MAX_BACKUP_JOBS=5
BACKUP_TIMEOUT=3600

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Environment
ENVIRONMENT=production 