# Borgmatic Web UI Environment Configuration

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (persists in ./data directory on host)
DATABASE_URL=sqlite:////app/data/borgmatic.db

# Borgmatic Configuration
BORGMATIC_CONFIG_PATH=./config/borgmatic.yaml
BORGMATIC_BACKUP_PATH=./backups

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/borgmatic-ui.log

# CORS Settings (comma-separated list)
# CORS_ORIGINS=http://localhost:8000,http://localhost:7879

# Server Settings
HOST=0.0.0.0
PORT=8081
WORKERS=2

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=300

# Backup Settings
MAX_BACKUP_JOBS=5
BACKUP_TIMEOUT=3600

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Environment
ENVIRONMENT=production
